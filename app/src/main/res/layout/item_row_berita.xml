<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/txtHeadline"
                style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="#A3DD67"
                android:fontFamily="@font/poppins_regular"
                android:padding="8dp"
                android:text="Nasional" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_judul_berita"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_headline"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/img_berita"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:text="lorem ipsum dolor sit amet, consecte dolor in reprehenderit " />

        <TextView
            android:id="@+id/txt_isi_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_judul_berita"
            android:layout_toLeftOf="@+id/img_berita"
            android:justificationMode="inter_word"
            android:maxLines="5"
            android:text="lorem ipsum dolor sit amet, consecte dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nu" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_berita"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/cv_headline"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/quran" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>